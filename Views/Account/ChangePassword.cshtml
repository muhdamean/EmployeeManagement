@model ChangePasswordViewModel

@{ 
    ViewBag.Title = "Change Password";
}


<div class="row">
    <div class="col-md-12">
        <div class="col-md-4 offset-4">
            <h4 class="align-content-center">Change Password</h4>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CurrentPassword" class="col-form-label"></label>
                    <input asp-for="CurrentPassword" class="form-control" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="col-form-label"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ComfirmPassword" class="col-form-label"></label>
                    <input asp-for="ComfirmPassword" class="form-control" />
                    <span asp-validation-for="ComfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">Change Password</button>
            </form>
        </div>
    </div>
</div>