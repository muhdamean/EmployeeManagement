@model EditRoleViewModel

@{ 
    ViewBag.Title = "Edit Role";
}

<h4>Edit Role</h4>
<form method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <button type="submit"  class="btn btn-primary btn-sm" >Update</button>
            <a  asp-action="listroles" class="btn btn-primary btn-sm">Cancel</a>
        </div>
    </div>

    <div class=" col-sm-10 offset-2">
        <div class="card mt-2">
            <div class="card-header">
                <h4>Users in this role</h4>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h4 class="card-title">@user</h4>
                    }
                }
                else
                {
                    <h5>None at the moment</h5>
                }
            </div>
            <div class="card-footer">
                <a asp-action="editusersInrole" asp-route-roleId="@Model.Id" class="btn btn-primary btn-sm" style="width:auto">Add or Remove Users</a>
            </div>
        </div>

    </div>
</form> 