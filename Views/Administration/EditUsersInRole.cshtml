@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Add or Remove Users</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1:">
                    <input asp-for="@Model[i].UserId" hidden />
                    <input asp-for="@Model[i].UserName" hidden />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-sm"style="width:auto">Update</button>
            <a asp-action="editrole" asp-route-id="@roleId" class="btn btn-info btn-sm">Cancel</a>
        </div>
    </div>
</form>