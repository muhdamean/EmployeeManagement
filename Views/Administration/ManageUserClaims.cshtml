@model UserClaimsViewModel

@{
    ViewBag.Title = "Manage Claims";
}
<h4>Manage User Claims</h4>
<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Add or Remove Claims</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1:">
                    <input  asp-for="@Model.Claims[i].ClaimType" type="hidden" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">@Model.Claims[i].ClaimType</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-sm" style="width:auto">Update</button>
            <a asp-action="edituser" asp-route-id="@Model.UserId" class="btn btn-info btn-sm">Cancel</a>
        </div>
    </div>
</form>
